<div id="big-title">
  <h1>FAKE-MM</h1>
  <p><strong>Your color</strong> Your style</p>
</div>

<div id="register-form">
<% form_for(@user, :url => reset_password_url ) do |f| %>
  <%= f.error_messages %>
  
  <table>
    <tr>
      <td>
	<%= f.label t('activerecord.attributes.user.email') %><br />
	<%= f.text_field :email %>
      </td>
    </tr>
  </table>

  <p>
    <%= f.submit t('actions.reset_password') %>
  </p>
<% end %>
</div

