<h1><%= t('titles.new_feedback') %></h1>

<div id="feedback-page">
<% form_for "feedback", :url => feedback_path do |f| -%>
<p><label><%= t('activerecord.attributes.feedback.name') %></label><br />
<%= f.text_field "name" %>
</p>
<p><label><%= t('activerecord.attributes.feedback.email') %></label><br />
<%= f.text_field "email" %>
</p>
<p><label><%= t('activerecord.attributes.feedback.text') %></label><br />
<%= f.text_area "text" %>
</p>
<p><%= f.submit 'Отправить' -%></p>
<% end -%>
</div>
