<% unless current_user %>

<div id="article-simple" class="box">
  <%= image_tag @article.imagebv.url %>
  <h1><%=h @article.title %></h1>
  <p><%=h @article.content %></p>
  <div class="clear article-footer"></div>
</div>

<% else %>

<div id="article-simple-authorized" class="box">
  <h1><%=h @article.title %></h1>
  <%= image_tag @article.imagebh.url %>
  <h2><%=h @article.title %></h2>

  <p><%= @article.content %></p>
  <div class="clear article-footer"></div>
  <div class="comments">
    <% if @article.comments.size > 0 -%>
    <ul>
      <% for comment in @article.comments do -%>
      <li>
	<%= image_tag comment.user.avatar.url(:small) %>
	<%= comment.user.name -%> : <%=h comment.content -%>
	<div class="box-footer-plain"><%= comment.updated_at.to_s(:short) -%></div>
	
      </li>
      <% end -%>
    </ul>
    <% end -%>
    <div class="new-comment">
      <% form_for  @comment do |f| -%>
        <%= f.hidden_field :article_id, :value => @article.id %>
        <%= f.text_area :content %>
	<%= f.submit %>
      <% end -%>
    </div>
  </div>
</div>

<% end %>
<%= render 'news_line', :news => @news %>
