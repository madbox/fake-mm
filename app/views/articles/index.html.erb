<h1><%=t 'activerecord.models.articles' -%></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Image-vl</th>
    <th>User</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%=h article.title %></td>
    <td><%=h article.content %></td>
    <td><%=h article.image.url %></td>
    <td><%=h article.user_id %></td>
    <td><%= link_to t('actions.show'), article %></td>
    <td><%= link_to t('actions.edit'), edit_article_path(article) %></td>
    <td><%= link_to t('actions.destroy'), article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('actions.new_article'), new_article_path %>
