  <% remote_form_for event, :with => %Q{btn=$(#) }, :builder => SmallFormBuilder do |f| -%>
<div>
    <%= f.text_field :title -%>
    <%= f.text_area :text, :rows => 3, :cols => 20 -%>
    <%= f.text_field :artist -%>
    <%= f.text_field :city -%>
    <%= f.text_field :date -%>
    <%= f.text_field :club -%>
    <%= f.text_field :price -%>
    <%= f.text_field :id, :disabled => true %>
    <%= f.text_field :link %>
    <%= hidden_field_tag 'submit_button', '' %>
</div>
    <%= f.submit t("actions.update"), { :onclick => %Q{ $('#submit_button').val('save') }} %>
    <% if Event.in_future.count > 0 %>
    <%= f.submit t("actions.prev"),   { :onclick => %Q{ $('#submit_button').val('prev')   }} %>
    <%= f.submit t("actions.next"),   { :onclick => %Q{ $('#submit_button').val('fwd')   }} %>
      <% unless event.new_record? -%>
      <%= button_to_remote t("actions.destroy"), :url => event_path(event), :method => :delete  %>
      <% end -%>
    <% end %>
  <% end %>
