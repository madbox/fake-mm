  <% remote_form_for event, :with => %Q{btn=$(#) }, :builder => SmallFormBuilder do |f| -%>
<div>
    <%= f.text_field :artist -%>
    <%= f.text_field :city -%>
    <%= f.text_field :date -%>
    <%= f.text_field :club -%>
    <%= f.text_field :price -%>
    <%= f.hidden_field :id %>
    <%= hidden_field_tag 'next_action', '' %>
</div>
    <%= f.submit t("actions.new"),    { :onclick => %Q{ $('#next_action').val('new')    }} %>
    <%= f.submit t("actions.update"), { :onclick => %Q{ $('#next_action').val('save') }} %>
    <%= f.submit t("actions.prev"),   { :onclick => %Q{ $('#next_action').val('prev')   }} %>
    <%= f.submit t("actions.next"),   { :onclick => %Q{ $('#next_action').val('next')   }} %>
  <% end %>
